/* components/choiceItem/choiceItem.wxss */
.placeholder{
  height: 105px;
}
.item{
  height: 100px;
  width: 100%;
  padding: 15px;
  background: #fff;
  border-bottom: 1px solid #abb4bf;
  box-sizing: border-box;
  position: relative;
}
.title{
  color:#333;
  font-size: 15px;
}
.info{
  height: 20px;
  width: 100%;
}
.info{
  position: absolute;
  bottom: 0;
  left: 0;
  font-size: 12px;
}
.info view{
  float: left;
}
.info text{
  float: right;
}
.author{
  width:50px;
  height: 50px; 
  position: absolute;
  right: 30px;
  top: 10px;
}
.author img{
  display: inline-block;
  width:50px;
  height: 50px; 
}