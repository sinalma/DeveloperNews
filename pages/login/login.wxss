.wrapper{
  position: relative;
  width: 100%;
  height: 100%;
}
.menu{
  background-color: #33B7ED;
  font-size: 12px;
  height: 30px;
}
.btn-grp{
  width: 50%;
  text-align: center;
  display: inline-block;
  background-color: inherit;
}
.btn-grp button{
  width: 100%;
  background-color: transparent;
  color: white;
}
.btn-grp line{
  background-color: white;
  height: 5px;
  width: 25px;
}
.main{
  margin-top: 20px;
}
.input-grp {
  width: 100%;
  height: 30px;
  padding: 20px;
  box-sizing: border-box;
  margin-bottom: 20px;
}
.input-grp input{
  border-bottom: 1px solid #ccc;
  padding: 5px;
  font-size: 12px;
}
.input-grp input:focus{
  border-bottom: 1px solid #33B7ED;
}
.input-grp:nth-child(2) input{
  width: 50%;
  float: left;
}
.input-grp:nth-child(2) button{
  width: 40%;
  float: right;
  height: 30px;
  font-size: 13px;
  color:#33B7ED;
  background-color: white;
  border: 1px solid #33B7ED;
  line-height: 30px;
}
.main .login{
  background-color: #33B7ED;
  color: white;
}
.footer{
  position: fixed;
  bottom: 10px;
  left: 10px;
  width: 100%;
  text-align: center;
  border-top: 1px solid #ccc;
  /* padding: 20px; */
}
.footer text{
  position: absolute;
  top: -10px;
  left: 0;
  right: 0;
  margin: 0 auto;
  font-size: 12px;
  width: 100px;
  background-color: white;
}
.footer .links{
  margin-top: 20px;
  text-align: center;
}
.footer image{
  width: 20px;
  height: 20px;
  margin-right: 30px;
}